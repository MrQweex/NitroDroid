<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="?header" >

        <ImageButton
            android:id="@+id/backbutton"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/toolbar_buttons"
            android:padding="5dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_ab_back_holo_dark" />

        <TextView
            android:id="@+id/taskTitlebar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:text=""
            android:padding="?header_padding"
            android:textStyle="bold"
            android:textColor="?header_text"
            android:textSize="?header_size" />



        <ImageButton
            android:id="@+id/addbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/toolbar_buttons"
            android:padding="10dp"
            android:layout_gravity="center"
            android:src="?add" />

        <ImageButton
            android:id="@+id/deletebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/toolbar_buttons"
            android:padding="10dp"
            android:layout_gravity="center"
            android:src="?delete" />

        <ImageButton
            android:id="@+id/sortbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/toolbar_buttons"
            android:padding="10dp"
            android:layout_gravity="center"
            android:src="?sort" />

    <ImageButton
            android:id="@+id/optionsbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/toolbar_buttons"
            android:padding="5dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_menu_moreoverflow_normal_holo_dark" />

    </LinearLayout>